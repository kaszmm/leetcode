 public static int LongestConsecutive(int[] nums)
        {
            if (nums == null || nums.Length == 0)
            {
                return 0;
            }

            HashSet<int> hs = new HashSet<int>(nums);

            int consecutive = 1;
            foreach (int num in hs)
            {
                if (hs.Contains(num - 1))
                {
                    continue;
                }

                int count = 1;
                while (hs.Contains(num + count++))

                    if (count > consecutive)
                    {
                        consecutive = count;
                    }
            }

            return consecutive;
        }
